        <Label x:Name="betamountlabel" Content="Bet amount:" HorizontalAlignment="Left" Margin="329,68,0,0" VerticalAlignment="Top"/>
        <Label x:Name="betamount" Content="BET AMOUNT" HorizontalAlignment="Left" Margin="415,68,0,0" VerticalAlignment="Top"/>
        <Label x:Name="balancelabel" Content="Balance:" HorizontalAlignment="Left" Margin="588,68,0,0" VerticalAlignment="Top"/>
        <Label x:Name="balance" Content="BALANCE" HorizontalAlignment="Left" Margin="664,68,0,0" VerticalAlignment="Top"/>
        <Label x:Name="cardpointslabel" Content="Card points:" HorizontalAlignment="Left" Margin="838,68,0,0" VerticalAlignment="Top"/>
        <Label x:Name="cardpoints" Content="CARD POINTS" HorizontalAlignment="Left" Margin="928,68,0,0" VerticalAlignment="Top"/>
        <Button x:Name="startbutton" Content="START (disable when game is in progress)" HorizontalAlignment="Left" Margin="27,124,0,0" VerticalAlignment="Top" Width="238" Height="39"/>
        <Button x:Name="betbutton" Content="BET" HorizontalAlignment="Left" Margin="377,124,0,0" VerticalAlignment="Top" Width="75" Height="39"/>
        <Button x:Name="hitbutton" Content="HIT" HorizontalAlignment="Left" Margin="624,124,0,0" VerticalAlignment="Top" Width="75" Height="39"/>
        <Button x:Name="stopbutton" Content="STOP" HorizontalAlignment="Left" Margin="887,124,0,0" VerticalAlignment="Top" Width="75" Height="39"/>
        <Label x:Name="card1" Content="CARD 1" HorizontalAlignment="Left" Margin="27,215,0,0" VerticalAlignment="Top"/>
        <Label x:Name="card2" Content="CARD 2" HorizontalAlignment="Left" Margin="154,215,0,0" VerticalAlignment="Top"/>
        <Label x:Name="card3" Content="CARD 3" HorizontalAlignment="Left" Margin="329,223,0,0" VerticalAlignment="Top"/>
        <Label x:Name="card4" Content="CARD 4" HorizontalAlignment="Left" Margin="448,223,0,0" VerticalAlignment="Top"/>
        <Label x:Name="card5" Content="CARD 5" HorizontalAlignment="Left" Margin="588,223,0,0" VerticalAlignment="Top"/>
        <Label x:Name="card6" Content="CARD 6" HorizontalAlignment="Left" Margin="673,223,0,0" VerticalAlignment="Top"/>
